<div class="container">

    <h1>Random Beer</h1>

    <hr>

    {{#each beers}}

    <div class="row">


        <div class="col-md-6">

            <article>

                <p class="name">{{name}}</p>
                <p>{{description}}</p>
                <p class="tag">{{tagline}}</p>
                <ul>{{#each food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p>{{brewers_tips}}</p>

            </article>

        </div>

        <div class="col-md-6">

            <img class="imagenRandom" src={{image_url}} alt="">

        </div>

    </div>



</div>

{{/each}}

</div>